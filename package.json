{
  "name": "pastebin",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:demo": "cross-env VITE_DEMO_MODE=true vite",
    "dev:api": "bun run dev-server.ts",
    "dev:wrangler": "bunx wrangler dev",
    "build": "tsc -b && vite build",
    "build:demo": "cross-env VITE_DEMO_MODE=true tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "deploy": "bun run build && bun run db:migrate && bunx wrangler deploy",
    "db:migrate": "bunx wrangler d1 migrations apply DB --remote",
    "db:migrate:local": "bunx wrangler d1 migrations apply DB --local"
  },
  "cloudflare": {
    "bindings": {
      "AUTH_KEY": {
        "type": "secret",
        "description": "Secret passphrase used to log in. Choose any secure string."
      }
    }
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-popover": "^1.1.6",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.2",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-switch": "^1.1.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.469.0",
    "motion": "^12.34.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.13.0",
    "shiki": "^3.22.0",
    "sonner": "^1.7.4",
    "tailwind-merge": "^3.0.2"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260214.0",
    "@eslint/js": "^9.39.1",
    "@types/bun": "^1.3.9",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.24",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.48.0",
    "vite": "^7.3.1",
    "wrangler": "^4.65.0"
  }
}