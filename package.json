{
  "name": "pastebin",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:api": "bun run dev-server.ts",
    "dev:wrangler": "bunx wrangler pages dev dist --d1 DB=pastebin-db --port 8788",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "deploy": "bun run build && bunx wrangler pages deploy dist",
    "db:create": "bunx wrangler d1 create pastebin-db",
    "db:migrate": "bunx wrangler d1 execute pastebin-db --remote --file=schema.sql",
    "db:migrate:local": "bunx wrangler d1 execute pastebin-db --local --file=schema.sql"
  },
  "dependencies": {
    "@heroui/react": "^2.8.9",
    "framer-motion": "^12.34.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.13.0",
    "shiki": "^3.22.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/bun": "^1.3.9",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.24",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.48.0",
    "vite": "^7.3.1",
    "wrangler": "^4.65.0"
  }
}